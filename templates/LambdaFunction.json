{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda Function to be invoke periodically",
  "Parameters": {
    "alarmName": {
      "Default": "LazyLambda",
      "Type": "String"
    },
    "deploymentBucket": {
      "Type": "String"
    },
    "handler": {
      "Type": "String"
    },
    "packageName": {
      "Type": "String"
    }
  },
  "Resources": {
    "Function": {
      "DependsOn": [
        "LambdaRole"
      ],
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucket"
          },
          "S3Key": {
            "Ref": "packageName"
          }
        },
        "Description": "Lambda Function to be invoke periodically",
        "Handler": {
          "Ref": "handler"
        },
        "MemorySize": "128",
        "Role": {
          "Fn::GetAtt": [
            "LambdaRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs",
        "Timeout": 60
      },
      "Type": "AWS::Lambda::Function"
    },
    "LambdaInvocationAlarm": {
      "DependsOn": [
        "Function",
        "Topic"
      ],
      "Properties": {
        "ActionsEnabled": "true",
        "AlarmActions": [
          {
            "Ref": "Topic"
          }
        ],
        "AlarmDescription": "Lambda function alarm on missing invocations",
        "AlarmName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "Function"
              },
              "Invocations"
            ]
          ]
        },
        "ComparisonOperator": "LessThanThreshold",
        "Dimensions": [
          {
            "Name": "FunctionName",
            "Value": {
              "Ref": "Function"
            }
          }
        ],
        "EvaluationPeriods": "1",
        "InsufficientDataActions": [
          {
            "Ref": "Topic"
          }
        ],
        "MetricName": "Invocations",
        "Namespace": "AWS/Lambda",
        "Period": 60,
        "Statistic": "SampleCount",
        "Threshold": "1",
        "Unit": "Count"
      },
      "Type": "AWS::CloudWatch::Alarm"
    },
    "LambdaRole": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/Lambda/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "logs:*"
                  ],
                  "Effect": "Allow",
                  "Resource": "arn:aws:logs:*:*:*"
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "AllowNothing"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    },
    "Topic": {
      "DependsOn": [
        "Function"
      ],
      "Properties": {
        "DisplayName": "LazyLambdaCloudWatchAlarmSNS",
        "Subscription": [
          {
            "Endpoint": {
              "Fn::GetAtt": [
                "Function",
                "Arn"
              ]
            },
            "Protocol": "lambda"
          }
        ]
      },
      "Type": "AWS::SNS::Topic"
    }
  }
}
